<!DOCTYPE html>
<html lang="es">
<head>
    <%- include ('./partials/head.ejs') %> 
</head>
<body>
    <%- include ('./partials/header.ejs') %>
    <main>
        <h2 class="leyenda">Promociones:</h2>
        <div class="promos">
            <img src="/images/promo.jpeg" alt="PromociÃ³n" width = "100%">
        </div>
        <h2 class="leyenda">Productos Destacados:</h2>
        <section class="product-list">
            <% let counter = 0
            winesList.forEach((wine) => { 
                if (counter <= 3) { %>
            <article class="vinos-borde">
                <!-- <div class="vinos-borde"> -->
                    <a href="/producto/detail/<%= wine.id %>"><img src="<%= wine.image %>" alt = "<%= wine.name %>" class="images" width="100%"></a>
                    <div class="product-description">
                        <p class = "coleccion"><%= wine.name %> </p>    
                        <p class = "precio">$ <%= wine.price %></p>     
                        <i class="fas fa-cart-plus"></i>            
                    </div>
                <!-- </div> -->
            </article>
            <% counter++}else return}) %>
        </section>
        <section class="more-products">
            <% let counterWhisky = 0
            whiskiesList.forEach((whisky) => { 
                if (counterWhisky <= 3) { %>
            <article class="vinos-borde">
                <!-- <div class="vinos-borde"> -->
                    <a href="/producto/detail/<%= whisky.id %>"><img src="<%= whisky.image %>" alt = "<%= whisky.name %>" class="images" width="100%"></a>
                    <div class="product-description">
                        <p class = "coleccion"><%= whisky.name %> </p>    
                        <p class = "precio">$ <%= whisky.price %></p>     
                        <i class="fas fa-cart-plus"></i>            
                    </div>
                <!-- </div> -->
            </article>
            <% counterWhisky++}else return}) %>
        </section>
    </main> 
    <%- include ('./partials/footer.ejs') %>
</body>
</html>