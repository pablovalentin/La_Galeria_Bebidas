<header>
    <div class="top-bar">
        <div class="social-media">
            <ul>
                <li><i class="fab fa-facebook"></i></li>
                <li><i class="fab fa-instagram"></i></li>
                <li><i class="fab fa-whatsapp"></i></li>
            </ul>
        </div>
        <div>
            <a href="/"><img src="/images/la-galeria-logo-mobile.png" class="logo" alt = "Logo La Galeria" width ="100%"></a>
        </div>
        <br>
        <div class="user-links">
            <ul>
                <li>
                    <form action="/producto/search" method="GET" class="search-form">
                        <input type="text" name="searchTerm" id="searchTerm" placeholder="Buscar..." class="seach-input">
                        <button type="submit" class="button-search">BUSCAR</button>
                    </form>
                    <!-- <i class="fas fa-search"></i></li> -->
                <li>
                    <div class="dropdown">
                        <button class="dropbtn"><i class="fas fa-user"></i></button>
                        <div class="dropdown-content">
                            <% if (locals.logged) { %> 
                                <a href="/user/logout">Logout</a>     
                                <a href="/user/profile">Perfil</a>
                            <% } else { %>
                                <a href="/user/login">Login</a>     
                                <a href="/user/registro">Registro</a>
                            <% } %>                               
                        </div>
                    </div> 
                </li>
                <li><a href="/carrito/shoppingcart"><i class="fas fa-shopping-cart"></i></a></li>
                <li>
                    <% if (locals.logged && locals.logged.roleID == 1 ) { %>
                    <div class="dropdown">
                        <button class="dropbtn"><i class="fas fa-wine-glass"></i></button>
                        <div class="dropdown-content">
                            <a href="/producto/productABM">Administrar Productos</a>   
                        </div>                        
                    </div> 
                </li>
                <li>                    
                    <div class="dropdown">
                        <button class="dropbtn"><i class="fas fa-chart-pie"></i></button>
                        <div class="dropdown-content">
                            <a href="http://localhost:3003">Dashboard</a>
                        </div>                        
                    </div> 
                    <% } %>    
                </li>
            </ul>
        </div>
        <br>
    </div>
    <nav class="button-links">
        <ul class="nav-bar">    
            <li><a href="/producto/vinos">Vinos</a></li>
            <li><a href="/producto/whiskies">Whiskies</a></li>
            <li><a href="/producto/spirits">Spirits</a></li>
            <li><a href="#paginadevinos">Promociones</a></li>
            <li><a href="#paginadevinos">Contacto</a></li>
        </ul>
    </nav>
    <div class="div-burger"> <!-- agregamos div para reducir hover del botÃ³n -->
        <div class="dropdown-burger">
            <button class="dropbtn-burger">
                <div class="burger-menu">
                    <i class="fas fa-bars"></i>
                </div>
            </button>
            <div class="dropdown-content">
                <a href="/producto/vinos">Vinos</a>
                <a href="/producto/whiskies">Whiskies</a>
                <a href="/producto/spirits">Spirits</a>
                <a href="#paginadevinos">Promociones</a>
                <a href="#paginadevinos">Contacto</a>
                
            </div>
        </div> 
    </div>
</header>  