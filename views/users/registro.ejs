<!DOCTYPE html>
<html lang="es">
<head>
    <%- include ('../partials/head.ejs') %>
    <link rel="stylesheet" href="/css/registro.css">    
    
</head>
<body>
    <%- include ('../partials/header.ejs') %>
    <main>
        <!-- Formulario registro -->
        <form action="/user/registro" method="POST" id="register-form" class="register-form" enctype="multipart/form-data">
            <label><h2>CREAR CUENTA</h2> </label>
            <div class="control-form-register">
                <label for="name">Nombre:</label>
                <input type="text" name="name" id="name" placeholder="Nombre" class="control" value="<%= locals.oldValues && oldValues.name %>">
                <% if (locals.errors && errors.name) { %>
                    <span class="error-message"><%= errors.name.msg %></span>
                <% } %>
                <span class='msg-error msg-error-name'></span>
            </div>
            <div class="control-form-register">
                <label for="lastName">Apellido:</label>
                <input type="text" name="lastName" id="lastName" placeholder="Apellido" class="control" value="<%= locals.oldValues && oldValues.lastName%>">
                <% if (locals.errors && errors.lastName) { %>
                    <span class="error-message"><%= errors.lastName.msg %></span>
                <% } %>
                <span class='msg-error msg-error-lastName'></span>
            </div>
            <div class="control-form-register">
                <label for="email">Correo electrónico:</label>
                <input type="email" name="email" id="email" placeholder="Correo electrónico" class="control" value="<%= locals.oldValues && oldValues.email%>">
                <% if (locals.errors && errors.email) { %>
                    <span class="error-message"><%= errors.email.msg %></span>
                <% } %>
                <span class='msg-error msg-error-email'></span>
            </div>
            <div class="control-form-register">
                <label for="password">Contraseña:</label>
                <input type="password" name="password" id="password" placeholder="Contraseña" class="control">
                <% if (locals.errors && errors.password) { %>
                    <span class="error-message"><%= errors.password.msg %></span>
                <% } %>
                <span class='msg-error msg-error-password'></span>
            </div>
            <div class="control-form-register">
                <label for="passwordConfirmation">Confirmar contraseña:</label>
                <input type="password" name="passwordConfirmation" id="passwordConfirmation" placeholder="Contraseña" class="control">
                <% if (locals.errors && errors.passwordConfirmation) { %>
                <span class="error-message"><%= errors.passwordConfirmation.msg %></span>
                <% } %>
                <span class='msg-error msg-error-passwordConfirmation'></span>
            </div>
            <div class="control-form-register">
                <label for="profileImage">Foto de perfil:</label>
                <input type="file" id="profileImage" name="profileImage" class="control-pic">
                <% if (locals.errors && errors.profileImage) { %>
                    <span class="error-message"><%= errors.profileImage.msg %></span>
                <% } %>
                <span class='msg-error msg-error-profileImage'></span>
            </div>
            <button type="submit" class="button-create">CREAR CUENTA</button>
            <hr class="line-break" size="1" width="90%" color="#484747">  
            <div class="go-login">
                <label>¿Ya tenés una cuenta? <a href="/user/login"><strong>Iniciá sesión.</strong></a></label>
            </div>
        </form>
    </main>
    <script src="/js/form-validation-register.js"></script> 
    <%- include ('../partials/footer.ejs') %>
</body>
</html>