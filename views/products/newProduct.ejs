<!DOCTYPE html>
<html lang="es">
<head>
    <%- include ('../partials/head.ejs') %>
    <link rel="stylesheet" href="/css/producto.css">    
    
</head>
<body> 
    <%- include ('../partials/header.ejs') %>
    <main>
        <!-- Formulario registro -->
        <form action="/producto/create" method="POST" class="product-form" enctype="multipart/form-data">
            <label><h2>AGREGAR PRODUCTO</h2> </label>
            <hr class="line-break" size="1" width="90%" color="#484747">  
            <div class="control-form-product">
                <label for="categoryId">Categoría:</label>
                <select name="categoryId" id="categoryId" class="control" autofocus>
                        <% categories.forEach((category) => { %>
                        <option value="<%= category.id %>"><%= category.name %></option>
                        <% }) %>
                </select>
<!--                 <input type="text" name="name" id="name" class="control" autofocus required> -->
            </div>
            <div class="control-form-product">
                <label for="name">Nombre:</label>
                <input type="text" name="name" id="name" class="control" required>
            </div>
            <div class="control-form-product">
                <label for="varietyId">Variedad:</label>
                <select name="varietyId" id="varietyId" class="control" autofocus>
                    <% varieties.forEach((variety) => { %>
                    <option value="<%= variety.id %>"><%= variety.name %></option>
                    <% }) %>
                </select>
            </div>
            <div class="control-form-product">
                <label for="description">Descripción:</label>                
                <textarea name="description" id="description" cols="47" rows="6" class="control" required></textarea>
            </div>
            <div class="control-form-product">
                <label for="price">Precio:</label>
                <input type="text" name="price" id="price" class="control" required>
            </div>
            <div class="control-form-product">
                <label for="quantity">Cantidad:</label>
                <input type="text" name="quantity" id="quantity" class="control" required>
            </div>
            <div class="control-form-product">
                <label for="image">Foto del producto:</label>
                <div class="seleccionar">
                    <input type="file" id="image" name="image" class="product-pic">
                </div>
            </div>
            <button type="submit" class="button-create">AGREGAR PRODUCTO</button>
        </form>
    </main>
    <%- include ('../partials/footer.ejs') %>
</body>
</html>