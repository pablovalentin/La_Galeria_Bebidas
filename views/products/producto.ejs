<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include ('../partials/head.ejs') %>
        <link rel="stylesheet" href="/css/producto.css">    
    </head>
<body>
    <%- include ('../partials/header.ejs') %>
    <main>
        <div class="product-detail">
            <div>
                <img src="<%= productDetail.image %>" alt = "<%= productDetail.name %>" class="images" width="100%">
            </div>
            <div class="product-description">
                <h1><%= productDetail.name %> </h1>
                <p class="sugerencias-titulo">Variedad: </p>
                <p class="sugerencias-desc"><%= productDetail.variety.name %></p>
                <p class="sugerencias-notas">Descripci√≥n:</p>
                <p class="sugerencias-desc"><%= productDetail.description %></p>
            </div>
        </div>
        <br>
        <br>
        <div class="precio">$ <%= productDetail.price %></div>
        <div class="cantidades">
            <i class="fas fa-minus"></i><input type="quantity" class= "place-holder" name="Cantidad" placeholder="1"><i class="fas fa-plus"></i>
        </div>
        <div class="button">
            <!-- <a href="/producto/<%= productDetail.id %>/edit">
                <button class="buy-button" type="button">EDITAR</button>
            </a> -->
            <button class="buy-button" type="button">COMPRAR</button>
        </div>
        
    </main>
</body>
<%- include ('../partials/footer.ejs') %>
</html>